$Download = "https://aka.ms/AzureConnectedMachineAgentWindows"
$File = "AzureConnectedMachineAgent.msi"

Invoke-WebRequest -Uri $Download -OutFile $File

msiexec /i $File /qn

azcmagent connect `
  --name "$(hostname)" `
  --resource-group "MyRG" `
  --location "eastus" `
  --subscription "<subid>" `
  --service-principal-id "<appid>" `
  --service-principal-secret "<secret>" `
  --tenant-id "<tenant>"
