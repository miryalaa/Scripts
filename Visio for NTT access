from graphviz import Digraph

# Create Digraph object
dot = Digraph("NTT_Datacenter_Process", format="png")
dot.attr(rankdir="TB", size="8")

# Nodes
dot.node("SNOW", "ServiceNow Request\n(Create for any DC task)")
dot.node("Vendor", "Vendor Details\n(Contact Info, etc.)")
dot.node("Team", "DC Corebridge Support\n(Open Access Request)")
dot.node("NTT", "NTT Portal Ticket\n(Includes SNOW + Vendor Details)")
dot.node("Ashburn", "Ashburn Datacenter", shape="folder")
dot.node("Hillsboro", "Hillsboro Datacenter", shape="folder")

# Edges
dot.edge("Ashburn", "SNOW", label="Task identified")
dot.edge("Hillsboro", "SNOW", label="Task identified")
dot.edge("SNOW", "Vendor", label="Collect vendor details")
dot.edge("Vendor", "Team", label="Provide to support team")
dot.edge("Team", "NTT", label="Open access request\nwith all details")

# Render file path
file_path = "/mnt/data/ntt_datacenter_process.png"
dot.render(file_path, cleanup=True)

file_path
